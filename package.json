{
  "name": "system-monitor",
  "version": "1.0.0",
  "description": "A Windows Widget that monitors your CPU and GPU",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package -asar",
    "make": "electron-forge make",
    "build": "electron-builder",
    "publish": "electron-forge publish"
  },
  "author": "VaffanClash",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.67",
    "@electron-forge/maker-deb": "^6.0.0-beta.67",
    "@electron-forge/maker-rpm": "^6.0.0-beta.67",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.67",
    "@electron-forge/maker-zip": "^6.0.0-beta.67",
    "@electron-forge/publisher-github": "^6.0.0-beta.67",
    "electron": "^21.0.1",
    "electron-builder": "^23.6.0"
  },
  "dependencies": {
    "systeminformation": "^5.12.6"
  },
  "build": {
    "appId": "System Monitor",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "installerIcon": "icon.ico",
      "uninstallDisplayName": "System Monitor Uninstaller",
      "license": "license.md",
      "allowToChangeInstallationDirectory": true
    }
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "system_monitor"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "vaffanClash",
              "name": "resouce-monitor"
            },
            "prerelease": false,
            "draft": true
          }
        }
      ]
    }
  }
}
